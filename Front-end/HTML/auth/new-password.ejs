<%- include('../../includes/customer/head.ejs') %>
    <link rel="stylesheet" href="/auth/login.css">

    <%- include('../../includes/customer/header-end.ejs') %>


        <body>

            <!-- nav-bar -->
            <%- include('../../includes/customer/navbar.ejs') %>


                <!-- nav-bar -->
                <section class="left-right-section-container">
                    <section class="leftside">
                        <img src="/assets/Imgs/logo/logo-sign-up.png" alt="">
                        <div class="leftside-content">
                            <!-- <h1>PARADISE</h1>
                            <p>TECHNOLOGY</p> -->
                        </div>
                    </section>


                    <section class="rightside">
                        <div class="Signup">
                            <h1 id="login-h1">Login</h1>
                            <% if (errorMessage) { %>
                                <p class="error-message"><%= errorMessage %></p>
                                <% } %>
                            <form action="/new-password" method="POST">
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input type="text" name="password" id="password" class="form-control" >
                                </div>                                
                                <div class="form-group">
                                    <button type="submit" class="Signup-btn btn-primary">Update Password</button>
                                </div>
                                <input type="hidden" name="userId" value="<%= userId %>">
                                <input type="hidden" name="passwordToken" value="<%= passwordToken %>">
                            </form>
                            <div class="login">
                                <p>Don't have an account? <a href="/signup">Signup Now</a></p>
                            </div>
                            

                        </div>
                    </section>
                </section>

