<%- include('../../includes/customer/head.ejs') %>
    <link rel="stylesheet" href="/auth/login.css">

    <%- include('../../includes/customer/header-end.ejs') %>


        <body>

            <!-- nav-bar -->


                <!-- nav-bar -->
                <section class="left-right-section-container">
                    <section class="leftside">
                        <img src="/assets/Imgs/logo/logo-sign-up.png" alt="">
                        <div class="leftside-content">
                            <!-- <h1>PARADISE</h1>
                            <p>TECHNOLOGY</p> -->
                        </div>
                    </section>


                    <section class="rightside">
                        <div class="Signup">
                            <h1>Signup</h1>
                            <% if (errorMessage) { %>
                                <p class="error-message"><%- errorMessage %></p>


                                <% } %>
                                    <form action="/Signup" method="POST">
                                        <div class="form-group">
                                            <label for="name">fullname</label>
                                            <input type="text" name="name" id="name"
                                                class="name <%= validationErrors.find(e => e.path === 'name') ? 'is-invalid' : '' %>"
                                                value="<%= oldInput.name %>" required>
                                        </div>

                                        <div class="form-group">
                                            <label for="email">Email</label>

                                            <input type="email" name="email" id="email"
                                                class="form-control <%= validationErrors.find(e => e.path === 'email') ? 'is-invalid' : '' %>"
                                                value="<%= oldInput.email %>" required>



                                        </div>
                                        <div class="form-group">
                                            <label for="phoneNumber">mobile number</label>
                                            <div class="phoneNumber-code-container">
                                                <input type="text" class="country-code-holder" value="+90" readonly>
                                                <input type="tel" name="phoneNumber" id="phoneNumber"
                                                    class="form-control <%= validationErrors.find(e => e.path === 'phoneNumber') ? 'is-invalid' : '' %>"
                                                    value="<%= oldInput.phoneNumber %>" placeholder="5123 456 78 90" required>
                                            </div>
                                        </div>
                                        <!-- 
                                <div class="form-group">
                                    <select name="gender" id="gender" required>
                                        <option value="" selected>select</option>
                                        <option value="male">Male</option>
                                        <option value="female">female</option>
                                        <option value="none">rather not to say</option>
                                    </select>
                                </div> -->
                                        <div class="form-group">
                                            <label for="password">Password</label>
                                            <input type="password" name="password" id="password"
                                                class="form-control <%= validationErrors.find(e => e.path === 'password') ? 'is-invalid' : '' %>"
                                                value="<%= oldInput.password %>" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="confirmPassword">Confirm Password</label>
                                            <input type="password" name="confirmPassword" id="confirmPassword"
                                                class="form-control <%= validationErrors.find(e => e.path === 'confirmPassword') ? 'is-invalid' : '' %>"
                                                value="<%= oldInput.confirmPassword %>" required>
                                        </div>
                                        <div class="form-group-checkbox">
                                            <input type="checkbox" name="Conditions" id="Conditions"
                                                class="form-control" required>
                                            <label for="Conditions"
                                                class="<%= validationErrors.find(e => e.path === 'Conditions') ? 'is-unchecked' : '' %>">By
                                                creating an account, you agree to Paradise
                                                Technology Conditions of Use and Privacy Notice.</label>
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="Signup-btn btn-primary">Signup</button>
                                        </div>


                                    </form>
                                    <div class="login">
                                        <p>Already have an account? <a href="/login">Login</a></p>
                                    </div>

                        </div>
                    </section>
                </section>

                <!--    content here -->



                <!--    content here -->
                <%- include('../../includes/customer/footer.ejs') %>
        </body>

        <%- include('../../includes/customer/script.ejs') %>

            </html>